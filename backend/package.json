{
  "name": "backend",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun --watch --no-clear-screen src/index.ts",
    "build": "bun build src/index.ts --compile --minify --sourcemap --outfile dist/server",
    "db:generate": "bun --bun run drizzle-kit generate --config src/database/drizzle/config.ts",
    "db:migrate": "bun --bun run drizzle-kit migrate --config src/database/drizzle/config.ts",
    "test": "vitest",
    "db:view": "concurrently \"bun drizzle-kit studio --config drizzle.config.ts\" \"pnpm dlx drizzle-lab visualizer\" \"sleep 1 && pnpm dlx drizzle-view\"",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@hono/zod-openapi": "^1.1.3",
    "@hono/zod-validator": "^0.7.4",
    "@ngneat/falso": "^8.0.2",
    "@orpc/json-schema": "^1.9.4",
    "@orpc/openapi": "^1.9.4",
    "@orpc/server": "^1.9.4",
    "@orpc/zod": "^1.9.4",
    "@paralleldrive/cuid2": "^3.1.0",
    "@prisma/client": "^6.17.1",
    "@scalar/hono-api-reference": "^0.9.22",
    "@stacksjs/ts-cache": "^0.1.2",
    "axios": "^1.12.2",
    "better-auth": "^1.3.27",
    "bun-ws-router": "^0.6.1",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-prisma-generator": "^0.1.7",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.2",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "prisma-generator-drizzle": "^0.7.6",
    "prisma-generator-typescript-interfaces": "^3.1.0",
    "stoker": "^2.0.1",
    "ts-cache": "^0.2.2",
    "ua-parser-js": "^2.0.6",
    "uuid": "^13.0.0",
    "valibot": "^1.1.0",
    "vue": "^3.5.22",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@libsql/client": "^0.15.15",
    "@types/bun": "^1.3.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-js": "eslint/js",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "knip": "^5.66.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
