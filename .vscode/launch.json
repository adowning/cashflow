{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Seed",
      "program": "${workspaceFolder}/backend/src/seed/seed.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": true
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug Dev",
      "program": "${workspaceFolder}/backend/src/main.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Run File",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "noDebug": true,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "attach",
      "name": "Attach Bun",
      "url": "ws://localhost:6499/",
      "stopOnEntry": false
    },
    {
      "type": "bun",
      "name": "Debug Dev",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev.ts",
      "cwd": "${workspaceFolder}",
      "watchMode": true
    },
    {
      "type": "bun",
      "name": "Debug Dev Server",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev-server.ts",
      "cwd": "${workspaceFolder}",
      "watchMode": true
    },
    {
      "type": "bun",
      "name": "Debug Tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/bun",
      "args": ["test"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
